<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson4.chat.Controller">
    <TextArea fx:id="textArea" editable="false" prefHeight="675.0" />
   <HBox alignment="CENTER">
      <children>
              <TextField fx:id="textField" onAction="#sendMessage" prefHeight="25" prefWidth="325.0" />
              <Button fx:id="sendText" onAction="#sendMessage" alignment="CENTER" text="Отправить" textAlignment="CENTER" />
      </children>
   </HBox>
</VBox>
